                    <Button x:Name="getLaunchercode" Content="生成启动脚本" VerticalAlignment="Top" Width="154" Height="35" FontFamily="Microsoft YaHei UI" FontSize="14" BorderBrush="#FF0068FF" FontWeight="Normal" Margin="610,374,0,0" Click="getLaunchercode_Click" HorizontalAlignment="Left"/>
                    <TextBox x:Name="server" Height="8" Margin="119,134,255,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" MaxLines="1" AutoWordSelection="True"/>
                    <TextBox x:Name="bAse" Height="23" Margin="119,69,14,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" MaxLines="1" AutoWordSelection="True" IsReadOnly="True"/>
                    <Label Content="服务端核心文件:" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="{x:Null}"/>
