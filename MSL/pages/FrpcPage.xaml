<Page x:Class="MSL.pages.FrpcPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:local="clr-namespace:MSL.pages"
      mc:Ignorable="d" 
      d:DesignHeight="460" d:DesignWidth="750"
      Title="FrpcPage" Loaded="Page_Loaded">
    <Page.RenderTransform>
        <TranslateTransform/>
    </Page.RenderTransform>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource ShowPage}"/>
        </EventTrigger>
    </Page.Triggers>
    <Grid>
        <Label Content="内网映射" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Background="{x:Null}" BorderBrush="{x:Null}" Height="45"/>
        <Label x:Name="frplab1" Content="未检测到内网映射配置，请点击 配置 按钮以配置" HorizontalAlignment="Left" Margin="20,50,0,0" VerticalAlignment="Top" FontSize="20" Background="{x:Null}" BorderBrush="{x:Null}" Height="50" Foreground="Red"/>
        <Label Content="您的公网IP为：" HorizontalAlignment="Left" Margin="20,100,0,0" VerticalAlignment="Top" FontSize="20" BorderBrush="{x:Null}" Background="{x:Null}" Height="35"/>
        <TextBlock x:Name="frplab3" Text="无" HorizontalAlignment="Left" Margin="185,105,0,0" VerticalAlignment="Top" FontSize="20" Foreground="{DynamicResource TextBlockBrush}"/>
        <Label Content="日志输出：" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" FontSize="14" BorderBrush="{x:Null}" Background="{x:Null}" Height="35"/>
        <Button x:Name="copyFrpc" Template="{StaticResource CustomButton}" Content="复制" HorizontalAlignment="Right" FontSize="14"  Margin="0,100,20,0" VerticalAlignment="Top" Width="100" Height="40" FontWeight="Normal" IsEnabled="False" Click="copyFrpc_Click"/>
        <Button x:Name="setfrpc" Template="{StaticResource CustomButton}" Content="配置" HorizontalAlignment="Right" Margin="0,180,20,0" VerticalAlignment="Top" Width="133" Height="64" FontSize="20" Click="setfrpc_Click"/>
        <Button x:Name="startfrpc" Template="{StaticResource CustomButton}" Content="启动内网映射" Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Right" Margin="0,300,20,0" Width="133" Height="62" FontSize="16" IsEnabled="False" Click="startfrpc_Click" VerticalAlignment="Top"/>
        <TextBox x:Name="frpcOutlog" ContextMenu="{DynamicResource UIContextMenu}" Margin="10,180,160,10" TextWrapping="Wrap" Text="日志" IsReadOnly="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Top" Padding="10"/>
        <Label Content="映射服务由 终末丶谎言 &#xA;提供&#xA;QQ：483232994" HorizontalAlignment="Right" Margin="0,0,0,10" VerticalAlignment="Bottom" Height="58" Width="153" Background="{x:Null}" BorderBrush="{x:Null}"/>
    </Grid>
</Page>
