<Page x:Class="MSL.pages.FrpcPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:local="clr-namespace:MSL.pages" xmlns:langs="clr-namespace:MSL.i18n"
      mc:Ignorable="d" d:DesignHeight="460" d:DesignWidth="750"
      Title="FrpcPage" Loaded="Page_Loaded">
    <Page.RenderTransform>
        <TranslateTransform/>
    </Page.RenderTransform>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource ShowPage}"/>
        </EventTrigger>
    </Page.Triggers>
    <Border Style="{StaticResource MagicBorder}" VerticalAlignment="Stretch" Margin="10,10,10,10">
        <Grid>
            <Label Content="{Binding [Pages_Frpc_Title], Source={x:Static langs:LanguageManager.Instance}}" Style="{StaticResource BorderTitle}"/>
            <TextBlock x:Name="frplab1" Text="{Binding [Pages_Frpc_Status], Source={x:Static langs:LanguageManager.Instance}}" Margin="10,40,0,0" VerticalAlignment="Top" FontSize="16" Foreground="Red" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding [Pages_Frpc_IP], Source={x:Static langs:LanguageManager.Instance}}" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" FontSize="16" Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock x:Name="frplab3" Text="{Binding [Pages_Frpc_IPNull], Source={x:Static langs:LanguageManager.Instance}}" HorizontalAlignment="Left" Margin="130,85,0,0" VerticalAlignment="Top" FontSize="16" Foreground="{DynamicResource PrimaryTextBrush}"/>
            <Button x:Name="copyFrpc" Content="{Binding [Pages_Frpc_Copy], Source={x:Static langs:LanguageManager.Instance}}" HorizontalAlignment="Right" FontSize="14"  Margin="0,75,20,0" VerticalAlignment="Top" Width="100" Height="35" FontWeight="Normal" IsEnabled="False" Click="copyFrpc_Click"/>
            <Button x:Name="setfrpc" Content="{Binding [Pages_Frpc_Configuration], Source={x:Static langs:LanguageManager.Instance}}" HorizontalAlignment="Right" Margin="0,150,10,0" VerticalAlignment="Top" Width="140" Height="60" FontSize="18" Click="setfrpc_Click"/>
            <Button x:Name="startfrpc" Content="{Binding [Pages_Frpc_Launch], Source={x:Static langs:LanguageManager.Instance}}" Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Right" Margin="0,250,10,0" Width="140" Height="60" FontSize="16" IsEnabled="False" Click="startfrpc_Click" VerticalAlignment="Top"/>
            <TextBox x:Name="frpcOutlog" Margin="10,120,160,0" TextWrapping="Wrap" Text="Logs" IsReadOnly="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Top" Padding="10"/>
        </Grid>
    </Border>
</Page>
