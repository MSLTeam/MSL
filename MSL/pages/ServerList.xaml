<Page x:Class="MSL.pages.ServerList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MSL.pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="820"
      Title="ServerList" Loaded="Page_Loaded">
    <Grid>
        <Label Margin="10,5,0,0" Content="服务器列表（双击可快捷启动服务器）：" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Height="42"/>

        <ListView x:Name="serverList" Margin="10,59,232,10" MouseDoubleClick="serverList_MouseDoubleClick" FontSize="16" Background="#FFFAFAFA" SelectionChanged="serverList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <Style>
                            <Setter Property="FrameworkElement.Visibility" Value="Collapsed"/>
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridViewColumn Width="550">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Image Height="22" Width="22" Name="imageName"  Source="{Binding ServerIcon}" HorizontalAlignment="Left"/>
                                    <TextBlock Margin="30,0,0,0" Width="Auto" Text="{Binding ServerName}"/>
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Margin="0,31,102,0" Content="服务器操作栏" FontSize="16" Width="125" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="{x:Null}"/>
        <Button x:Name="addServer" Margin="0,71,10,0" Style="{StaticResource ButtonPrimary}" VerticalAlignment="Top" Height="48" Width="217" Content="新建服务器" Click="addServer_Click" HorizontalAlignment="Right" FontSize="16"/>
        <Button x:Name="refreshList" Margin="0,124,10,0" VerticalAlignment="Top" Height="48" Width="217" Content="刷新" Click="refreshList_Click" HorizontalAlignment="Right" FontSize="16"/>
        <Button x:Name="setServer" Margin="0,336,10,0" VerticalAlignment="Top" Height="48" Width="217" Content="更改服务器设置" Click="setServer_Click" HorizontalAlignment="Right" FontSize="16"/>
        <Button x:Name="delServer" Margin="0,177,10,0" VerticalAlignment="Top" Height="48" Width="217" Content="删除所选服务器" Click="delServer_Click" HorizontalAlignment="Right" FontSize="16"/>
        <Button x:Name="startWithCmd" Margin="0,283,10,0" VerticalAlignment="Top" Height="48" Width="217" Content="用命令行开启服务器" Click="startWithCmd_Click" HorizontalAlignment="Right" FontSize="16"/>
        <Button x:Name="startServerBtn" Margin="0,230,10,0" Height="48" Width="217" Content="开启所选服务器" Click="startServerBtn_Click" HorizontalAlignment="Right" FontSize="16" VerticalAlignment="Top"/>
        <Button x:Name="openServerDir" Margin="0,442,10,0" VerticalAlignment="Top" Height="48" Width="217" Content="打开服务器文件夹" Click="openServerDir_Click" HorizontalAlignment="Right" FontSize="16"/>
        <Button x:Name="setModorPlugin" Margin="0,389,10,0" VerticalAlignment="Top" Height="48" Width="217" Content="管理服务器插件或MOD" Click="setModorPlugin_Click" HorizontalAlignment="Right" FontSize="16"/>
    </Grid>
</Page>
