<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:langs="clr-namespace:HandyControl.Properties.Langs;assembly=HandyControl"
                    xmlns:ex="clr-namespace:HandyControl.Tools.Extension;assembly=HandyControl"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <ContextMenu x:Key="UIContextMenu" TextBlock.LineHeight="12" TextBlock.TextAlignment="Left">
        <MenuItem Header="{ex:Lang Key={x:Static langs:LangKeys.SelectAll}}" Command="SelectAll">
            <MenuItem.Icon>
                <iconPacks:PackIconMaterial Kind="FormatColorText"/>
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="{ex:Lang Key={x:Static langs:LangKeys.Cut}}" Command="Cut">
            <MenuItem.Icon>
                <iconPacks:PackIconMaterial Kind="ContentCut"/>
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="{ex:Lang Key={x:Static langs:LangKeys.Copy}}" Command="Copy">
            <MenuItem.Icon>
                <iconPacks:PackIconMaterial Kind="ContentCopy"/>
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="{ex:Lang Key={x:Static langs:LangKeys.Paste}}" Command="Paste">
            <MenuItem.Icon>
                <iconPacks:PackIconMaterial Kind="ContentPaste"/>
            </MenuItem.Icon>
        </MenuItem>
    </ContextMenu>
</ResourceDictionary>