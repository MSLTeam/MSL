<UserControl x:Class="MSL.controls.FlowMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSL.controls"
             mc:Ignorable="d">
    <Grid>
        <!-- 先让他为Danger颜色，后面再来完善 -->
        <Border x:Name="MessageBorder"
                Background="{DynamicResource DarkDangerBrush}"
                CornerRadius="5"
                Opacity="0"
                Padding="10"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="10">
            <TextBlock x:Name="MessageTextBlock" Text="消息内容" Foreground="White" />
        </Border>
    </Grid>
</UserControl>
