<Border x:Class="MSL.controls.TextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:MSL.controls"
        mc:Ignorable="d" 
        CornerRadius="10"
        Background="{DynamicResource SecondaryRegionBrush}">
    <hc:SimplePanel>
        <TextBlock Name="DialogText" Foreground="{StaticResource PrimaryTextBrush}" Text="Please Wait" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="50"/>
    </hc:SimplePanel>
</Border>
