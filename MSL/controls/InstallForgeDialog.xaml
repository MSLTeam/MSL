<hc:Window x:Class="MSL.controls.InstallForgeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSL.controls"
        mc:Ignorable="d"
        Title="InstallForgeDialog" Height="300" Width="500" ShowNonClientArea="False" xmlns:hc="https://handyorg.github.io/handycontrol"  WindowStartupLocation="CenterOwner" ResizeMode="NoResize"  ShowInTaskbar="False">
    <Grid>
        <Grid Background="{DynamicResource DialogBrush2}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Foreground="{DynamicResource PrimaryTextBrush}" HorizontalAlignment="Center" Margin="15,15,0,0" TextWrapping="Wrap" Text="正在为你安装Forge···请稍等🌹" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
            <hc:TextBox Grid.Row="1" Margin="15" />
            <TextBlock Grid.Row="2" HorizontalAlignment="Center" Margin="15,0,0,15" TextWrapping="Wrap" Text="等待安装开始···" VerticalAlignment="Top" FontSize="16"/>
        </Grid>
    </Grid>
</hc:Window>
