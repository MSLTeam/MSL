<UserControl x:Class="MSL.controls.dialogs.DownloadManagerDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSL.controls.dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="20" CornerRadius="10" Background="{DynamicResource RegionBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
        <Grid>
            <local:DownloadManagerControl x:Name="ManagerControl"/>
            <Button x:Name="CloseDialogBtn" Content="关闭" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15" Click="CloseDialogBtn_Click"/>
        </Grid>
    </Border>
</UserControl>
