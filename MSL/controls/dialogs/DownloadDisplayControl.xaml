<UserControl x:Class="MSL.controls.dialogs.DownloadDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSL.controls.dialogs"
             xmlns:control="clr-namespace:MSL.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <control:MagicCard>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- 下载项列表 -->
            <ListView x:Name="DownloadItemsListView" Grid.Row="0"
              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
              SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 文件名和URL -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Filename}" 
                                   FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Url}" 
                                   TextTrimming="CharacterEllipsis" Foreground="Gray" 
                                   FontSize="12" Margin="0,0,0,5"/>

                            <!-- 进度条 -->
                            <ProgressBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5"
                                     Value="{Binding Progress.ProgressPercentage}" 
                                     Height="15" Maximum="100"/>

                            <!-- 下载信息和状态 -->
                            <WrapPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="{Binding ProgressText}" Margin="0,0,15,0"/>
                                <TextBlock Text="{Binding SpeedText}" Margin="0,0,15,0"/>
                                <TextBlock Text="{Binding RemainingText}" Margin="0,0,15,0"/>
                                <TextBlock Text="{Binding StatusText}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                            </WrapPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <!-- 底部控制区 -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="活动下载: " VerticalAlignment="Center"/>
                    <TextBlock x:Name="ActiveDownloadsTextBlock" Text="0" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text=" | 总进度: " VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBlock x:Name="TotalProgressTextBlock" Text="0%" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Grid>
    </control:MagicCard>
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
</UserControl>
