<UserControl x:Class="MSL.controls.dialogs.LogAnalysisDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSL.controls.dialogs"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:ctrls="clr-namespace:MSL.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             MinHeight="400" MinWidth="600"
             Loaded="UserControl_Loaded">
    <ctrls:MagicCard x:Name="MainCard" Background="{DynamicResource BorderFullBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid x:Name="HeaderPanel" VerticalAlignment="Top">
                <TextBlock Text="AI日志分析功能" Style="{StaticResource MagicText16}" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button x:Name="Close" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{StaticResource ButtonPrimary}" Content="关闭" Click="Close_Click"/>
            </Grid>
            <Grid Grid.Row="2">
                <ContentControl x:Name="LoginControl" Visibility="Collapsed"/>
                <TabControl x:Name="MainGrid" BorderThickness="0">
                    <TabItem Header="服务器信息输入">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="5*"/>
                                </Grid.RowDefinitions>
                                <ctrls:MagicCard Title="用户信息">
                                    <Label x:Name="UserAIInfo" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                                </ctrls:MagicCard>
                                <ctrls:MagicCard Grid.Row="2" Title="服务器信息">
                                    <TabControl BorderThickness="0">
                                        <TabItem Header="ServerInfo">
                                            <TextBox x:Name="ServerInfoInput" Padding="7" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                                        </TabItem>
                                        <TabItem Header="Plugins">
                                            <TextBox x:Name="PluginsInput" Padding="7" TextWrapping="Wrap" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"/>
                                        </TabItem>
                                        <TabItem Header="Mods">
                                            <TextBox x:Name="ModsInput" Padding="7" TextWrapping="Wrap" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"/>
                                        </TabItem>
                                    </TabControl>
                                </ctrls:MagicCard>
                            </Grid>
                            <ctrls:MagicCard Grid.Column="2" Title="服务器日志">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBox x:Name="LogInput" Padding="7" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                                    <hc:UniformSpacingPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Spacing="5">
                                        <ComboBox x:Name="ModelSelector" 
              Width="150" 
              hc:InfoElement.Placeholder="选择模型"
              DisplayMemberPath="DisplayName" 
              SelectedValuePath="Id"
              IsEnabled="False"/>
                                        <Button x:Name="Store" Style="{StaticResource ButtonPrimary}" Content="商城" Click="Store_Click"/>
                                        <Button x:Name="StartAnalyse" Style="{StaticResource ButtonPrimary}" Content="开始分析" Click="StartAnalyse_Click"/>
                                    </hc:UniformSpacingPanel>
                                </Grid>
                            </ctrls:MagicCard>
                        </Grid>
                    </TabItem>
                    <TabItem Header="分析结果输出">
                        <RichTextBox x:Name="AnalysisOutput" IsReadOnly="True" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto">
                            <FlowDocument>
                                <Paragraph>
                                    <Run Text="此处显示AI分析结果……"/>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </ctrls:MagicCard>
</UserControl>
