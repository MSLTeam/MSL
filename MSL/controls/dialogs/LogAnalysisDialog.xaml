<UserControl x:Class="MSL.controls.dialogs.LogAnalysisDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSL.controls.dialogs"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:ctrls="clr-namespace:MSL.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             MinHeight="400" MinWidth="600"
             Loaded="UserControl_Loaded">
    <ctrls:MagicCard x:Name="MainCard" Title="AI日志分析">
        <Grid>
            <ContentControl x:Name="LoginControl" Visibility="Collapsed"/>
            <Grid x:Name="MainGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <ctrls:MagicCard Grid.Column="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="5"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBox x:Name="LogInput" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"/>
                        <TabControl Grid.Row="2">
                            <TabItem Header="Plugins">
                                <TextBox x:Name="PluginsInput" TextWrapping="Wrap" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"/>
                            </TabItem>
                            <TabItem Header="Mods">
                                <TextBox x:Name="ModsInput" TextWrapping="Wrap" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"/>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </ctrls:MagicCard>
                <ctrls:MagicCard Grid.Column="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox x:Name="AnalysisOutput" Text="此处是AI分析的输出" TextWrapping="Wrap" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"/>
                        <Label x:Name="UserAIInfo" Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                        <hc:UniformSpacingPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Spacing="5">
                            <Button x:Name="Close" Style="{StaticResource ButtonPrimary}" Content="关闭" Click="Close_Click"/>
                            <Button x:Name="Store" Style="{StaticResource ButtonPrimary}" Content="商城" Click="Store_Click"/>
                            <Button x:Name="StartAnalyse" Style="{StaticResource ButtonPrimary}" Content="开始分析" Click="StartAnalyse_Click"/>
                        </hc:UniformSpacingPanel>
                    </Grid>
                </ctrls:MagicCard>
            </Grid>
        </Grid>
    </ctrls:MagicCard>
</UserControl>
