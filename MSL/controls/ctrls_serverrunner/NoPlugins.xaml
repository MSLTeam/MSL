<UserControl x:Class="MSL.controls.ctrls_serverrunner.NoPlugins"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSL.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:MagicCard HorizontalAlignment="Center" VerticalAlignment="Center" Padding="15">
        <StackPanel>
            <TextBlock Text="无法管理该服务器的插件" Foreground="{DynamicResource DarkPrimaryBrush}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
            <TextBlock Text="未检测到plugins文件夹，您所使用的服务端核心支持加载插件吗？&#xA;请重启服务器并检查所用服务端是否支持相应功能后再试" TextAlignment="Center" TextWrapping="Wrap" Foreground="{DynamicResource PrimaryTextBrush}" FontSize="16"/>
            <Button x:Name="reFresh" Content="刷新" Style="{StaticResource ButtonPrimary}"
                        Command="{Binding RefreshCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Margin="10" Width="100" Height="32" FontSize="16"/>
        </StackPanel>
    </local:MagicCard>
</UserControl>
